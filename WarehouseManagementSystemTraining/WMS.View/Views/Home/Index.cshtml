<!-- Thêm CSS tùy chỉnh -->
<style>
    body {
        background-color: #f0f4f8; /* Màu nền xám sáng để cảm giác thoải mái và hiện đại */
        color: #333; /* Màu chữ tối để dễ đọc */
        font-family: 'Arial', sans-serif; /* Font chữ hiện đại */
    }

    .text-primary {
        color: #007bff; /* Màu xanh công nghiệp */
    }

    h3 {
        border-bottom: 2px solid #007bff; /* Đường viền dưới tiêu đề */
        padding-bottom: 10px;
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }

    .btn {
        font-weight: bold; /* Chữ đậm cho nút */
        border-radius: 30px; /* Bo tròn góc nút */
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu khi hover */
    }

        .btn:hover {
            background-color: #0056b3; /* Màu xanh đậm hơn khi hover */
        }

    .list-unstyled li {
        margin-bottom: 10px; /* Khoảng cách giữa các mục */
    }

    .card {
        border: 1px solid #e0e0e0; /* Đường viền nhẹ cho thẻ */
        border-radius: 10px; /* Bo góc nhẹ */
        transition: transform 0.3s, box-shadow 0.3s; /* Hiệu ứng chuyển tiếp */
    }

        .card:hover {
            transform: translateY(-5px); /* Hiệu ứng nâng lên khi hover */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng khi hover */
        }

    .image-container {
        height: 200px; /* Chiều cao cố định cho hình ảnh */
        overflow: hidden; /* Ẩn phần thừa của hình ảnh */
        display: flex; /* Sử dụng flexbox để căn giữa hình ảnh */
        justify-content: center; /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        margin-bottom: 15px; /* Khoảng cách dưới hình ảnh */
    }

        .image-container img {
            max-height: 100%; /* Chiều cao tối đa bằng 100% của khối chứa */
            width: auto; /* Giữ tỷ lệ khung hình */
        }
</style>
