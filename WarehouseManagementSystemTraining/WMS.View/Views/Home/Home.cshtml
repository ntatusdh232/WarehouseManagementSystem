@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.2/font/bootstrap-icons.min.css" rel="stylesheet">

<div class="container mt-5 text-center">
    <h1 class="display-4 text-primary">Warehouse Management System</h1>
    <p class="lead">Thông tin về các thành phần trong hệ thống</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success text-center font-weight-bold"
         style="background-color: #28a745; color: white; font-size: 22px;">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorMessage" class="alert alert-danger text-center font-weight-bold"
         style="background-color: #dc3545; color: white; font-size: 22px;">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row g-4 justify-content-center">

        <!-- Card cho Item -->
        <div class="col-md-4">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title text-primary">Item</h3>
                    <p class="card-text flex-grow-1">Quản lý và theo dõi các sản phẩm trong hệ thống.</p>
                    <div class="d-flex justify-content-between">
                        <form asp-controller="Item" asp-action="Item" method="get">
                            <button type="submit" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-box-seam"></i> Xem Item
                            </button>
                        </form>
                        <form asp-controller="Item" asp-action="ExportToExcel" method="get" class="mt-2">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-file-earmark-excel"></i> Import Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card cho Employee -->
        <div class="col-md-4">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title text-primary">Employee</h3>
                    <p class="card-text flex-grow-1">Theo dõi và quản lý thông tin nhân viên trong tổ chức.</p>
                    <div class="d-flex justify-content-between">
                        <form asp-controller="Employee" asp-action="Employee" method="get">
                            <button type="submit" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-person"></i> Xem Employee
                            </button>
                        </form>
                        <form asp-controller="Employee" asp-action="ExportToExcel" method="get" class="mt-2">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-file-earmark-excel"></i> Import Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background-color: #f8f9fa; /* Màu nền nhẹ nhàng */
    }

    .text-primary {
        color: #007bff; /* Màu xanh công nghiệp */
    }

    h1, h3 {
        font-family: 'Arial', sans-serif; /* Font hiện đại */
        margin-bottom: 15px; /* Khoảng cách dưới tiêu đề */
    }

    .btn {
        font-weight: bold; /* Chữ đậm cho nút */
        border-radius: 20px; /* Bo tròn góc nút */
        transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
    }

    .btn-outline-primary {
        border-color: #007bff; /* Màu viền nút */
    }

        .btn-outline-primary:hover {
            background-color: #007bff; /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
        }

    .alert {
        font-size: 22px; /* Kích thước chữ thông báo */
    }

    .card {
        border: none; /* Không có viền cho card */
    }
</style>

<script>
    // Tự động ẩn thông báo sau 3 giây
    setTimeout(function () {
        var successMessage = document.getElementById("successMessage");
        var errorMessage = document.getElementById("errorMessage");

        if (successMessage) {
            successMessage.style.display = "none"; // Ẩn thông báo thành công
        }

        if (errorMessage) {
            errorMessage.style.display = "none"; // Ẩn thông báo lỗi
        }
    }, 3000); // 3000ms = 3 giây
</script>
