@model WMS.Domain.AggregateModels.EmployeeAggregate.Employee

<div class="container mt-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorMessage" class="alert alert-danger text-center font-weight-bold"
             style="background-color: #dc3545; color: white; font-size: 22px;">
            @TempData["ErrorMessage"]
        </div>
    }

    <h1 class="text-center mb-4">Create New Employee</h1>

    <form asp-controller="Employee" asp-action="CreateEmployee" method="post" class="bg-light p-4 rounded shadow">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="EmployeeId" class="form-label"></label>
            <input asp-for="EmployeeId" class="form-control" required />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EmployeeName" class="form-label"></label>
            <input asp-for="EmployeeName" class="form-control" required />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary ">Create</button>
            <a asp-action="Employee" class="btn btn-secondary ">Close</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #E3F2FD; /* Màu nền nhẹ nhàng */
        font-family: 'Arial', sans-serif; /* Font hiện đại */
    }

    .btn {
        font-weight: bold; /* Chữ đậm cho nút */
        border-radius: 20px; /* Bo tròn góc nút */
    }

    .form-label {
        font-weight: bold; /* Chữ đậm cho nhãn */
    }
</style>

<script>
    // Tự động ẩn thông báo sau 3 giây
    setTimeout(function () {
        var errorMessage = document.getElementById("errorMessage");

        if (errorMessage) {
            errorMessage.style.display = "none"; // Ẩn thông báo lỗi
        }
    }, 3000); // 3000ms = 3 giây
</script>
